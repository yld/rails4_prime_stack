%head
  %meta{charset: 'utf-8'}
  %meta{'http-equiv' => 'X-UA-Compatible', content: 'IE=edge,chrome=1'}
  - if content_for?( :description )
    -#%meta{name: 'description', content: content_for( :description )}
  %meta{name: 'viewport', content: 'width=device-width'}
  %title
    = yield :title
    = "#{ controller.controller_name.titleize } - #{ controller.action_name.titleize } rails4_prime_stack" unless content_for?( :title )
  = render 'stylesheets'
  /[if lt IE 8]
    = stylesheet_link_tag 'font-awesome-ie7.min.css', media: 'all'
  = yield :head_javascript
  = csrf_meta_tags

